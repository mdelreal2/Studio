<?xml version="1.0" encoding="utf-8"?>

<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mariodelreal.studio" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.NoActionBar">

        <!--
        MAIN
        -->

        <activity android:name=".MainActivity" android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!--
        MARKET PLACE
        -->

        <activity android:name=".MarketPlaceActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <!--
        DISCOVER
        -->

        <activity android:name=".DiscoverActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <!--
        DISCOVER TEST
        -->

        <activity android:name=".DiscoverActivityTest" android:label="Studio"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <!--
        CAMERA ACTIVITY
        -->

        <activity android:name=".CameraActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <!--
        NOTIFICATIONS
        -->

        <activity android:name=".NotificationsActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <!--
        HOME
        -->

        <activity android:name=".HomeActivity" android:label="@string/app_name"
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">

        </activity>

        <!--

        -->
        
    </application>

</manifest>